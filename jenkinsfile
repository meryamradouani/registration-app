pipeline {
    agent { label "jenkins-Agent" }
    environment {
        APP_NAME = "register-app-pipeline"
        IMAGE_TAG = "v1.0.${BUILD_NUMBER}"
    }

    stages {
        stage("Cleanup Workspace") {
            steps {
                cleanWs()
            }
        }

        stage("Checkout from SCM") {
            steps {
                git branch: 'main', credentialsId: 'github-token', url: 'https://github.com/meryamradouani/registration-app.git'
            }
        }

        stage("Update the Deployment Tags") {
            steps {
                sh """
                   echo "Current deployment file content:"
                   cat regapp-deploy.yml
                   echo "Updating image tag to: ${IMAGE_TAG}"
                   sed -i 's|image: ashfaque9x/regapp|image: ashfaque9x/regapp:${IMAGE_TAG}|g' regapp-deploy.yml
                   echo "Updated deployment file content:"
                   cat regapp-deploy.yml
                """
            }
        }

        stage("Push the changed deployment file to Git") {
            steps {
                sh """
                   git config --global user.name "meryamradouani"
                   git config --global user.email "meryamradouani@gmail.com"
                   git add regapp-deploy.yml
                   git commit -m "Updated Deployment Manifest with ${IMAGE_TAG}" || echo "No changes to commit"
                """
                withCredentials([gitUsernamePassword(credentialsId: 'github-token', gitToolName: 'Default')]) {
                    sh "git push origin main"
                }
            }
        }
    }
}
